{
    "name": "moby-dick",
    "version": "2.7.1",
    "private": true,
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "db:generate": "turbo run db:generate --filter=database",
        "db:migrate": "turbo run db:migrate --filter=database",
        "db:push": "turbo run db:push --filter=database",
        "db:seed": "turbo run db:seed --filter=database",
        "db:studio": "turbo run db:studio --filter=database",
        "postinstall": "turbo run db:generate",
        "clean": "turbo run clean && rimraf node_modules",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "eslint": "^8.55.0",
        "prettier": "^3.1.0",
        "rimraf": "^5.0.5",
        "turbo": "^1.11.0",
        "typescript": "^5.3.2"
    },
    "packageManager": "pnpm@8.10.0",
    "engines": {
        "node": ">=18.0.0"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}